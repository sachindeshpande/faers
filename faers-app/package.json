{
  "name": "faers-app",
  "version": "1.0.0",
  "description": "FAERS Submission Application - FDA Adverse Event Reporting System",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "unset ELECTRON_RUN_AS_NODE && electron-vite dev",
    "build": "electron-vite build",
    "preview": "unset ELECTRON_RUN_AS_NODE && electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc -b",
    "test": "vitest",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@hookform/resolvers": "^3.3.2",
    "antd": "^5.12.0",
    "better-sqlite3": "^9.2.2",
    "dayjs": "^1.11.10",
    "pdf-lib": "^1.17.1",
    "react-hook-form": "^7.49.0",
    "uuid": "^9.0.1",
    "xmlbuilder2": "^3.1.1",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.3.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "playwright": "^1.40.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vitest": "^1.0.4"
  },
  "build": {
    "appId": "com.faers.submission-app",
    "productName": "FAERS Submission App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icons"
    }
  }
}
